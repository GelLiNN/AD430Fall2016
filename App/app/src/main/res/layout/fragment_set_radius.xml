<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="northseattlecollege.ASLBuddy.SetRadiusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textRadiusLabel"
                android:text="@string/setRadiusLabel" android:layout_marginRight="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textRadiusDisplay"
                android:text=".25"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textRadiusLabel"
                android:layout_toEndOf="@+id/textRadiusLabel"
                android:textColor="@color/colorAccent"/>

        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekBarRadiusValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="40"
            android:progress="1" />
    </LinearLayout>

</FrameLayout>
